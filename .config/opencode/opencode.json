{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-gemini-auth@latest"],
  "disabled_providers": ["openrouter"],
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "google/gemini-2.5-flash-lite",

  "permission": {
    "external_directory": {
      "~/personal/**": "allow",
      "~/work/**": "allow",
      "~/.config/**": "allow"
