{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "theme": {
    "dark": "Neo Gruber Darker",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },
  "restore_on_startup": "last_workspace",
  "format_on_save": "off",
  "file_finder": {
    "file_icons": false
  },
  "collaboration_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 300,
    "indent_guides": {
      "show": "never"
    },
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 20,
    "folder_icons": false,
    "file_icons": false,
    "hide_root": true
  },
  "outline_panel": {
    "default_width": 300,
    "indent_guides": {
      "show": "never"
    },
    "dock": "right",
    "auto_fold_dirs": false
  },
  "git_panel": {
    "button": false
  },
  "terminal": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "expand_terminal_card": false,
    "expand_edit_card": true,
    "message_editor_min_lines": 8,
    "enable_feedback": false,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_width": 700,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "grok-code-fast-1"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "grok-code-fast-1"
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.5-flash-lite-preview"
    },
    "profiles": {
      "ask": {
        "name": "Plan",
        "enable_all_context_servers": true,
        "context_servers": {
          "exa": {
            "tools": {
              "get_code_context_exa": false
            }
          },
          "tavily": {
            "tools": {
              "tavily_map": false,
              "tavily_crawl": false,
              "tavily_extract": false
            }
          },
          "firecrawl": {
            "tools": {
              "firecrawl_extract": false,
              "firecrawl_search": false
            }
          }
        },
        "tools": {
          "fetch": false,
          "open": true,
          "contents": true,
          "diagnostics": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true
        }
      },
      "write": {
        "name": "Build",
        "enable_all_context_servers": true,
        "context_servers": {
          "exa": {
            "tools": {
              "get_code_context_exa": false
            }
          },
          "tavily": {
            "tools": {
              "tavily_map": false,
              "tavily_crawl": false,
              "tavily_extract": false
            }
          },
          "firecrawl": {
            "tools": {
              "firecrawl_extract": false,
              "firecrawl_search": false
            }
          }
        },
        "tools": {
          "fetch": false,
          "project_notifications": true,
          "open": true,
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        }
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "context_servers": {},
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 12.5,
  "agent_ui_font_size": 17.5,
  "buffer_line_height": "standard",
  "use_autoclose": false,
  "current_line_highlight": "all",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "search_wrap": false,
  "wrap_guides": [80, 100],
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 300,
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "on_yank"
  },
  "buffer_font_features": {
    "calt": false
  },
  "diagnostics": {
    "inline": {
      "enabled": false
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "languages": {
    "XML": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--parser", "html", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"]
        }
      }
    },
    "Kdl": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "kdlfmt",
          "arguments": ["format", "--stdin"]
        }
      }
    },
    "Nu": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "/Users/tifan/.config/nushell/scripts/format.nu"
        }
      },
      "format_on_save": "on"
    },
    "CSS": {
      "tab_size": 2
    },
    "Lua": {
      "tab_size": 2
    },
    "Markdown": {
      "show_edit_predictions": true
    }
  }
}
