{
  "languages": {
    "Markdown": {
      "show_inline_completions": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "base_keymap": "None",

  "theme": {
    "dark": "Gruber Darker - Dimmed",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },

  // GENERAL
  "restore_on_startup": "last_workspace",
  "format_on_save": "off",

  // AI
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "default_width": 600,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },

  // EDITOR
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 12.4,
  "buffer_line_height": "standard",
  "use_autoclose": false,
  "current_line_highlight": "none",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "search_wrap": false,
  "wrap_guides": [80],
  // "indent_guides": {
  //   "enabled": false
  // },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "inline_blame": {
      "delay_ms": 1000
    }
  },
  "buffer_font_features": {
    "calt": false // ligatures
  },

  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },

  // UI
  "tab_bar": {
    // "show": false,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "file_icons": false
  },
  "project_panel": {
    // "indent_guides": {
    //   "show": "never"
    // },
    "default_width": 300,
    "dock": "right",
    "auto_fold_dirs": true,
    "folder_icons": false,
    "indent_size": 20,
    "file_icons": false
  },
  "outline_panel": {
    "default_width": 300,
    "dock": "right"
  },
  // "chat_panel": {
  //   "button": false
  // },
  // "collaboration_panel": {
  //   "button": false
  // },
  "terminal": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
