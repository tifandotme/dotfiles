{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "base_keymap": "VSCode",

  "theme": {
    "dark": "Neo Gruber Darker",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },
  "experimental.theme_overrides": {
    // Base 16 IR Black
    "terminal.ansi.black": "#000000",
    "terminal.ansi.bright_black": "#6c6c66",
    "terminal.ansi.dim_black": "#6c6c66",
    "terminal.ansi.red": "#ff6c60",
    "terminal.ansi.bright_red": "#ff6c60",
    "terminal.ansi.dim_red": "#ff6c60",
    "terminal.ansi.green": "#a8ff60",
    "terminal.ansi.bright_green": "#a8ff60",
    "terminal.ansi.dim_green": "#a8ff60",
    "terminal.ansi.yellow": "#ffffb6",
    "terminal.ansi.bright_yellow": "#ffffb6",
    "terminal.ansi.dim_yellow": "#ffffb6",
    "terminal.ansi.blue": "#96cbfe",
    "terminal.ansi.bright_blue": "#96cbfe",
    "terminal.ansi.dim_blue": "#96cbfe",
    "terminal.ansi.magenta": "#ff73fd",
    "terminal.ansi.bright_magenta": "#ff73fd",
    "terminal.ansi.dim_magenta": "#ff73fd",
    "terminal.ansi.cyan": "#c6c5fe",
    "terminal.ansi.bright_cyan": "#c6c5fe",
    "terminal.ansi.dim_cyan": "#c6c5fe",
    "terminal.ansi.white": "#b5b3aa",
    "terminal.ansi.bright_white": "#fdfbee",
    "terminal.ansi.dim_white": "#b5b3aa"
  },

  // GENERAL
  "restore_on_startup": "last_workspace",
  "format_on_save": "off",

  "languages": {
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"]
        }
      }
    },

    "Kdl": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "kdlfmt",
          "arguments": ["format", "--stdin"]
        }
      }
    },
    "Nu": {
      "tab_size": 4
      // "formatter": {
      //   // https://github.com/nushell/nufmt is not stable yet
      //   "external": {
      //     "command": "sed",
      //     "arguments": ["-e", "s/ *$//"]
      //   }
      // }
    },
    "CSS": {
      "tab_size": 2
    },
    "Lua": {
      "tab_size": 2
    },
    "Markdown": {
      "show_edit_predictions": false
    }
  },
  "context_servers": {
    "mcp-server-github": {
      "settings": {
      }
    }
  },
  "agent": {
    "profiles": {
      "ask": {
        "context_servers": {
          "mcp-server-github": {
            "tools": {
              "get_code_scanning_alert": true,
              "get_commit": true,
              "get_file_contents": true,
              "get_issue": true,
              "get_issue_comments": true,
              "get_me": true,
              "get_pull_request": true,
              "get_pull_request_comments": true,
              "get_pull_request_files": true,
              "get_pull_request_reviews": true,
              "get_pull_request_status": true,
              "get_secret_scanning_alert": true,
              "list_branches": true,
              "list_code_scanning_alerts": true,
              "list_commits": true,
              "list_issues": true,
              "list_pull_requests": true,
              "list_secret_scanning_alerts": true,
              "search_issues": true,
              "search_users": true,
              "search_repositories": true,
              "search_code": true
            }
          }
        },
        "name": "Ask",
        "tools": {
          "terminal": false,
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": false,
          "grep": true,
          "thinking": true
        }
      },
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_width": 600,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // EDITOR
  "show_user_picture": false,
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 12.5,
  "buffer_line_height": "standard",
  "use_autoclose": false,
  "current_line_highlight": "all",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "search_wrap": false,
  "wrap_guides": [80],
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 300,
    "toggle_relative_line_numbers": true
  },

  "buffer_font_features": {
    "calt": false // ligatures
  },

  // LSP
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },

  // UI
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "file_icons": false
  },
  "project_panel": {
    "default_width": 300,
    "indent_guides": {
      "show": "never"
    },
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 20,
    "folder_icons": false,
    "file_icons": false
  },
  "outline_panel": {
    "default_width": 500,
    "indent_guides": {
      "show": "never"
    },
    "dock": "right",
    "auto_fold_dirs": false
  },
  "chat_panel": {
    "button": "when_in_call"
  },
  "terminal": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
