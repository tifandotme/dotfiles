{
  "theme": {
    "dark": "Gruber Darker",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },
  "restore_on_startup": "last_workspace",

  "features": {
    "inline_completion_provider": "supermaven"
  },

  // Rawdog keymaps lol
  "base_keymap": "None",

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Vim-my stuff
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "current_line_highlight": "none",
  "vim": {
    "toggle_relative_line_numbers": true
  },

  // Editor
  "format_on_save": "off",
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 13,
  "buffer_line_height": "standard",
  "search_wrap": false,
  "wrap_guides": [80],
  "indent_guides": {
    "enabled": false
  },

  // UI
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },
  "project_panel": {
    "default_width": 300,
    "dock": "right",
    "auto_fold_dirs": true,
    "folder_icons": false,
    "file_icons": false
  },
  "outline_panel": {
    "default_width": 300,
    "dock": "right"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "terminal": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },

  // Git
  "git": {
    "inline_blame": {
      "delay_ms": 1000
    }
  },

  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  }
}
