{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "base_keymap": "None",

  "theme": {
    "dark": "Neo Gruber Darker",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },
  "experimental.theme_overrides": {
    // Base 16 IR Black
    "terminal.ansi.black": "#000000",
    "terminal.ansi.bright_black": "#6c6c66",
    "terminal.ansi.dim_black": "#6c6c66",
    "terminal.ansi.red": "#ff6c60",
    "terminal.ansi.bright_red": "#ff6c60",
    "terminal.ansi.dim_red": "#ff6c60",
    "terminal.ansi.green": "#a8ff60",
    "terminal.ansi.bright_green": "#a8ff60",
    "terminal.ansi.dim_green": "#a8ff60",
    "terminal.ansi.yellow": "#ffffb6",
    "terminal.ansi.bright_yellow": "#ffffb6",
    "terminal.ansi.dim.yellow": "#ffffb6",
    "terminal.ansi.blue": "#96cbfe",
    "terminal.ansi.bright_blue": "#96cbfe",
    "terminal.ansi.dim.blue": "#96cbfe",
    "terminal.ansi.magenta": "#ff73fd",
    "terminal.ansi.bright_magenta": "#ff73fd",
    "terminal.ansi.dim.magenta": "#ff73fd",
    "terminal.ansi.cyan": "#c6c5fe",
    "terminal.ansi.bright_cyan": "#c6c5fe",
    "terminal.ansi.dim.cyan": "#c6c5fe",
    "terminal.ansi.white": "#b5b3aa",
    "terminal.ansi.bright_white": "#fdfbee",
    "terminal.ansi.dim_white": "#b5b3aa"
    // "syntax": {
    //   "comment": {
    //     "color": "#828282ff"
    //   },
    //   "comment.doc": {
    //     "color": "#828282ff"
    //   }
    // },
  },

  // GENERAL
  "restore_on_startup": "last_workspace",
  "format_on_save": "off",

  // AI
  "features": {
    "inline_completion_provider": "copilot"
  },
  "languages": {
    "Nu": {
      "tab_size": 4
    },
    "CSS": {
      "tab_size": 2
    },
    "Markdown": {
      "show_inline_completions": false
    }
  },
  "assistant": {
    "default_width": 600,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },

  // EDITOR
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 12.4,
  "buffer_line_height": "standard",
  "use_autoclose": false,
  "current_line_highlight": "all",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "search_wrap": false,
  "wrap_guides": [80],
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 1000
    }
  },
  "buffer_font_features": {
    "calt": false // ligatures
  },

  // LSP
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },

  // UI
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "file_icons": false
  },
  "project_panel": {
    // "indent_guides": {
    //   "show": "never"
    // },
    "default_width": 300,
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 20,
    "folder_icons": false,
    "file_icons": false
  },
  "outline_panel": {
    "default_width": 300,
    "dock": "right"
  },
  // "chat_panel": {
  //   "button": false
  // },
  // "collaboration_panel": {
  //   "button": false
  // },
  "terminal": {
    "button": false
  },
  "notification_panel": {
    "button": false
  }
}
