{
  "amp.permissions": [
    {
      "tool": "Bash",
      "matches": {
        "cmd": "*git commit*"
      },
      "action": "ask"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "*git push*"
      },
      "action": "ask"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "*rm -rf*"
      },
      "action": "ask"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "*context7*"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "*bw*"
      },
      "action": "ask"
    }
  ],
  "amp.terminal.theme": "dark",
  "amp.experimental.modes": ["bombadil"],
  "amp.git.commit.coauthor.enabled": false,

  "amp.mcpServers": {
    "n8n-mcp": {
      "command": "bunx",
      "args": ["n8n-mcp"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_MCP_TELEMETRY_DISABLED": "true",
        "N8N_API_URL": "https://n8n.tifan.me",
        "N8N_API_KEY": "${N8N_API_KEY}"
      }
    },
    "mem0": {
      "command": "uvx",
      "args": ["mem0-mcp-server"],
      "env": {
        "MEM0_API_KEY": "${MEM0_API_KEY}",
        "MEM0_DEFAULT_USER_ID": "tifandotme"
      }
    }
  },
  "amp.guardedFiles.allowlist": [
    "/Users/tifan/.agents/skills/actual-budget-assistant/scripts/actual-cli.js"
  ]
}
